
menor_altura = float("inf") 
maior_altura = float("-inf") 
soma_alturas_masculino = 0
contagem_masculino = 0
contagem_feminino = 0

for i in range(5):
    while True:
            altura = float(input("Digite a altura: "))
            if altura > 0:
                break
    while True:
        genero = input("Digite o gênero M ou F: ")
        if genero in ['M', 'F']:
            break
        else:
            print("Erro.Tente de novo.")

    if altura < menor_altura:
        menor_altura = altura
    if altura > maior_altura:
        maior_altura = altura

    if genero == 'M':
        soma_alturas_masculino += altura
        contagem_masculino += 1
    else:
        contagem_feminino += 1

if contagem_masculino > 0:
    media_alturas_masculino = soma_alturas_masculino / contagem_masculino
else:
    media_alturas_masculino = 0 

print(f"A maior altura do grupo é: {maior_altura:.2f}")
print(f"A menor altura do grupo é: {menor_altura:.2f}")

if contagem_masculino > 0:
    print(f"A média de altura dos homens é: {media_alturas_masculino:.2f}")
else:
    print("0 homens")

print(f"O número de mulheres é: {contagem_feminino}")
